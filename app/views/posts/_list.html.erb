<div class="content-frame stacked">

  <div class="content-panel list">

    <div class="user-info-header">

      <div class="user-info-image">
        <%= image_tag post.user.image.url(:medium), class: "tiny-profile-image" %>
      </div>

      <div class="user-info-name">

        <span class="post-display-name"><%= link_to post.user.display_name, profile_page_path(post.user.display_name) %></span>
        <span class="post-date"><%= post.created_at %></span>

      </div>
      

    </div>

    <div class="user-post-content">

      <h5>Title of my Post</h5>

      <p>Maybe jsut a formatted twitter feed</p>

    </div>

  </div>

</div>
