<div class="header-container">

	<div class="header-center">

		<ul class="header-left">

			<li class="site-title"><%= link_to "10th", root_path, class: "site-title" %></li>

			<% if user_signed_in? %>

				<li><a class="<% if @page == "home" %> active <%end%>" href="<%= root_path %>">Home</a></li>

				<li><a class="<% if @page == "requests" %> active <%end%>" href="<%= dashboard_path %>">Dashboard</a></li>
			
			<%else%>

				<li><a class="<% if @page == "about" %> active <%end%>" href="<%= about_path %>">About</a></li>

			<%end%>

		</ul>

		<ul class="header-right">

		<% unless user_signed_in? %>

			<li><a class="login-modal-cta">Login</a></li>

			<li><a class="join-modal-cta">Signup</a></li>

		<%else%>

			<li><a class="balance-header <% if @page == "balance" %> active <%end%>" href="<%= balance_path%>"><span><img></img></span>Balance: <span class="money-green-span">$20.00</span></a></li>

			<li>
				<button type="button" class="btn btn-default" data-container="body" data-toggle="popover" data-placement="bottom" data-content="Vivamus sagittis lacus vel augue laoreet rutrum faucibus.">
					Popover on bottom
				</button>
			</li>

			<li><a class="account-settings-modal">Account Settings</a></li>

			<li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>

			<li><a class="header-image-container<% if @page == "requests" %> active <%end%>" href="<%= dashboard_path %>"><%= image_tag current_user.image.url(:medium), class: "header-image" %></a></li>

		<%end%>

		</ul>

	</div>

</div>


