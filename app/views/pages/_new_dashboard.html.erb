<div class="profile-header dashboard" id="dashboard-header-for-mobile">

	<div class="centered-content">

		<ul>
			<li class="profile-header-option active" id="profile_option_posts" data-option-type="posts">
				<a>Top</a>
			</li>

			<li class="profile-header-option" id="profile_option_new" data-option-type="new">
				<a>New</a>
			</li>

<!-- 			<li class="profile-header-option" id="profile_option_subscribers" data-option-type="communities">
				<a>Communities</a>
			</li>

			<li class="profile-header-option" id="profile_option_subscribers" data-option-type="subscribers">
				<a>Following</a>
			</li> -->

		</ul>

	</div>

</div>


<div class="content">

	<div class="content-box">

		<div class="main-content-column">

			<div class="column-content" id="column_content_posts">

				<% if @top_posts.count > 0 %>

					<% @top_posts.each do |post| %>

						<%= render :partial => 'posts/list', :locals => {:post => post} %>

					<%end%>

					<div class="center">
	   					
	   					<%= will_paginate @top_posts, renderer: BootstrapPagination::Rails %>

					</div>

				<% else %>

		          <div class="empty-content">

		            <p>Subscribe to communities you find interesting to see their posts in your timeline.</p>

		            <%= link_to "See All Communities", communities_path, class: "gold-text-background" %>

		          </div>

		        <% end %>

			</div>

			<div class="column-content" id="column_content_new" style="display:none;">
				 
				 <% Post.all.each do |post| %>

					<%= render :partial => 'posts/list', :locals => {:post => post} %>

				<%end%>

			</div>

		</div>

