  <%# else %>

    <a class="user-cta join-community-cta community" data-following-id="<%# @community.id%>">
      Join
    </a>

  <%# end %> -->

</div>


<div class="content">

  <div class="content-box">

    <div class="main-content-column">

      <div class="column-content" id="column_content_posts">

        <% Post.all.reverse.each do |post| %>

          <%= render :partial => 'posts/list', :locals => {:post => post} %>

        <%end%>

      </div>

      <div class="column-content" id="column_content_subscribers">

        <% Post.all.reverse.each do |post| %>

          <%= render :partial => 'posts/list', :locals => {:post => post} %>

        <%end%>

      </div>

    </div>

    <div class="side-content-column">

      <h4>Filter</h4>

      <div class="content-frame stacked">

        <div class="content-panel">

          <p>Improve Your Account</p>

        </div>

      </div>

    </div>

  </div>

</div>
