<div class="modal-container full" id="settings">

	<span class="dismiss-modal">+</span>

  <div class="modal-content full">

  	<h4>Account Settings</h4>

	<div class="horizontal-sub-nav">

		<ul>

			<li><a class="option-item active" id="basic-option"><span>Basic Info</span></a></li>
			<li><a class="option-item middle"  id="payment-option"><span>Payments</span></a></li>
			<li><a class="option-item" id="cancel-option"><span>Cancel Account</span></a></li>

		</ul>

	</div>

<!--     #missing two forms here -->



	<div id="cancel-account">

		<%= button_to "Cancel My Account", registration_path(current_user), data: { confirm: "Are you sure?" }, method: :delete, class: "cancel-account-button" %>

	</div>

  </div>


</div>

