
<a href="<%=profile_page_path(comment.user.display_name)%>" title="<%= comment.user.display_name %>"><%= image_tag comment.user.image.url(:medium), class: "header-image" %><span class="user-display-name"><%= comment.user.display_name%></span></a>

<!-- <a class="comment-reply-cta"><span class="comment red glyphicon glyphicon-comment" aria-hidden="true"></span></a> -->

<span class="comment-text"><%= comment.comment_text %></span>

<div class="comment-actions">
	<span>Reply</span>

	<div style="float:right;">
		<span class="comment-up-vote glyphicon glyphicon-circle-arrow-up" title="Upvote" data-comment-id="<%= comment.id %>" aria-hidden="true"></span>
		<span class="comment-down-vote glyphicon glyphicon-circle-arrow-down" title="Downvote" data-comment-id="<%= comment.id %>" aria-hidden="true"></span>
	</div>
</div>

